<header class="header header-sticky mb-4">
  <div class="container-fluid">
    <button class="header-toggler px-md-0 me-md-3" type="button" onclick="coreui.Sidebar.getInstance(document.querySelector('#sidebar')).toggle()">
      <svg class="icon icon-lg">
        <use xlink:href="<%= image_path('vendors/@coreui/icons/svg/free.svg#cil-menu') %>" ></use>
      </svg>
    </button>
    <ul class="header-nav ms-3">
      <li class="nav-item">
        <%= link_to({ locale: switch_locale}, class: "nav-link py-0" ) do %>
          <div class="avatar avatar-md">
            <%= image_tag(language_info.values.first, class: "lang-img") %>
          </div>
        <% end %>
      </li>
      <%= render "notifications/notifications" %>
      <li class="nav-item dropdown">
        <a class="nav-link py-0" data-coreui-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
          <div class="avatar avatar-md">
            <%= image_tag current_user.avatar.variant(:user_info), class: "avatar-img" if current_user.avatar.attached? %>
          </div>
        </a>
        <div class="dropdown-menu dropdown-menu-end pt-0">
          <div class="dropdown-header bg-light py-2">
            <div class="fw-semibold"><%= t("text.account")%></div>
          </div>
          <%= link_to admin_sidekiq_web_path, class: "dropdown-item" do %>
            <svg class="icon me-2">
              <use xlink:href="<%= image_path('vendors/@coreui/icons/svg/free.svg#cil-settings') %>"></use>
            </svg> <%= t("text.settings")%>
          <% end %>
          <%= button_to destroy_user_session_path , method: :delete , class: "dropdown-item" do %>
            <svg class="icon me-2">
              <use xlink:href="<%= image_path('vendors/@coreui/icons/svg/free.svg#cil-account-logout') %>"></use>
            </svg> <%= t("text.sign_out")%>
          <% end %>
        </div>
      </li>
    </ul>
  </div>
</header>

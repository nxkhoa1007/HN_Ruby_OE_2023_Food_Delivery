<div class="dropdown-item" id="current-noti-<%= notification.id %>">
  <div class="message text-wrap">
    <div class="py-3 me-3 float-start">
      <div class="avatar">
        <%= image_tag("admin/system.jpg", class: "avatar-img")%>
      </div>
    </div>
      <div class="d-flex justify-content-between mt-1">
        <div class="small text-body-secondary fw-bold"><%= t "text.system" %></div>
      </div>
    <div class="d-flex justify-content-between align-items-center">
      <%= link_to edit_admin_order_path(notification.recipient_id), class: "text-dark text-decoration-none" do %>
        <div class="<%= unread_noti(notification) %>"><%= notification.params[:message] %></div>
        <div class="small <%= unread_noti(notification) %>"><%= t"text.ago" , time: time_ago_in_words(notification.created_at) %></div>
      <% end %>
      <% unless notification.read_at? %>
        <%= button_to "Đã xem" , admin_notification_path(notification) , class: "btn btn-success text-white", method: :put %>
      <% end %>
    </div>
  </div>
</div>
